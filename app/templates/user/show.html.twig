    <div class="starter-template" style="padding: 3rem 1.5rem;text-align: center;">
    {% if app.user.avatar.filename is defined and app.user.avatar.filename|length %}
        <div class = "nav-profile-img">
            <img class="nav-profile-img avatar-img" src="{{ asset('uploads/avatars/'~ app.user.avatar.filename) }}">
