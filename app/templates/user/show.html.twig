        <div class = "nav-profile-img">
            <img class="nav-profile-img avatar-img" src="{{ asset('uploads/avatars/avatarPlaceHolder.jpg') }}">
        </div>
    {% endif %}
        <h1>{{ 'logged_as'|trans }}</h1>
        <h1>{{ app.user.nickname }}</h1>
            <a href="{{ url('user_passwd')}} " title="{{ 'action_passwd'|trans }}">
                <button type="button" class="btn btn-sm btn-outline-secondary">
                    {{ 'action_passwd'|trans }}
                </button>
            </a>
            <a href="{{ url('user_edit') }}" title="{{ 'action_edit'|trans }}">
                <button type="button" class="btn btn-sm btn-outline-secondary">
                    {{ 'action_edit'|trans }}
                </button>
            </a>
            <a href="{{ url('avatar_edit') }}" title="{{ 'avatar_edit'|trans }}">
                <button type="button" class="btn btn-sm btn-outline-secondary">
                    {{ 'avatar_edit'|trans }}
                </button>
            </a>
    </div>
