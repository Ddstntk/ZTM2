{% block body %}

    {% include 'default/_form.html.twig' with {
        page_title: 'title_post_create',
        attr: {
            method: 'POST',
            action: url('post_create')
        },
        form: form,
        submit_label: 'post_create'|trans,
        back_to_list_path: 'post_index',
    } %}

    <h1>{{ 'title_post_create'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('post_create') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('post_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}