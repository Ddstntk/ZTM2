{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_delete'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}

    <h1>{{ 'title_user_delete'|trans({'%id%': user.id|default('')}) }}</h1>
    {% include 'default/_form.html.twig' with {
        page_title: 'title_user_delete',
        page_title_param: {'%id%': user.id},
        attr: {
            method: 'DELETE',
            action: url('user_delete', {'id': user.id}),
        },
        form: form,
        submit_label: 'action_delete'|trans,
        back_to_list_path: 'admin_index',
    } %}

    {{ form_start(form, { method: 'DELETE', action: url('user_delete', {id: user.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_delete'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('admin_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
{% endblock %}