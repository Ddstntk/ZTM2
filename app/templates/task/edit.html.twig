{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_task_edit'|trans({'%id%': task.id|default('')}) }}
{% endblock %}

{% block body %}

    {% include 'default/_form.html.twig' with {
        page_title: 'title_task_edit',
        page_title_param: {'%id%': task.id},
        attr: {
            method: 'PUT',
            action: url('task_edit', {'id': task.id}),
        },
        form: form,
        back_to_list_path: 'task_index',
    } %}


    <h1>{{ 'title_task_edit'|trans({'%id%': task.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('task_edit', {id: task.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('task_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}